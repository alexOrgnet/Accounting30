&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Счет = Параметры.Счет;
	
	СвойстваСчета = РегистрыСведений.СчетНаОплатуПокупателюОплатаСервиса.СвойстваСчета(Счет);
	
	ЗначенияКлюча = Новый Структура;
	ЗначенияКлюча.Вставить("Организация", СвойстваСчета.Организация);
	ЗначенияКлюча.Вставить("Счет", Счет);
	
	КлючЗаписи = РегистрыСведений.СчетНаОплатуПокупателюОплатаСервиса.СоздатьКлючЗаписи(ЗначенияКлюча);
	Ресурсы = КлючЗаписи.Метаданные().Ресурсы;
	
	Для каждого Ресурс Из Ресурсы Цикл
		Значение = СвойстваСчета[Ресурс.Имя];
		
		НоваяСтрока = ПредставлениеСвойств.Добавить();
		НоваяСтрока.ПредставлениеСвойства = Ресурс.Синоним;
		Если ЗначениеЗаполнено(Значение) Тогда
			НоваяСтрока.ЗначениеСвойства = Строка(Значение);
		КонецЕсли;
	КонецЦикла;
	
КонецПроцедуры

