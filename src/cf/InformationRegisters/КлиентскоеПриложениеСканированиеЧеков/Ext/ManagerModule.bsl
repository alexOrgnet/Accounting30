Функция НовыйНачальныеДанные()
	
	Данные = Новый Структура;
	
	Данные.Вставить("КодПриложения", Метаданные.Имя);
	Данные.Вставить("ПодключениеЧерезКлиентскоеПриложение", Истина);
	
	Возврат Данные;
	
