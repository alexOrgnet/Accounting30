	Отборы = ОбщегоНазначенияКлиентСервер.НайтиЭлементыИГруппыОтбора(
		Список.КомпоновщикНастроек.Настройки.Отбор, "Организация");
	
	Если Отборы.Количество() = 1 Тогда
		ОтборОрганизация = Отборы[0].ПравоеЗначение;
		ОтборОрганизацияИспользование = Отборы[0].Использование;
		Список.КомпоновщикНастроек.Настройки.Отбор.Элементы.Удалить(Отборы[0]);
	КонецЕсли;
	
	Отборы = ОбщегоНазначенияКлиентСервер.НайтиЭлементыИГруппыОтбора(
		Список.КомпоновщикНастроек.Настройки.Отбор, "ВидОперации");
	
	Если Отборы.Количество() = 1 Тогда
		ОтборВидОперации = Отборы[0].ПравоеЗначение;
		ОтборВидОперацииИспользование = Отборы[0].Использование;
		Список.КомпоновщикНастроек.Настройки.Отбор.Элементы.Удалить(Отборы[0]);
	КонецЕсли;
	
	ОтборыСписков.СброситьИспользованиеПользовательскихОтборовВНастройке(Настройки);
	
	ПомеченныеНаУдалениеСервер.УдалитьОтборПометкаУдаления(Настройки);
КонецПроцедуры

