		_НаимДокПодп = Реквизиты.ДокументПредставителя;
		_ПризОтпрУП = 2;
	Иначе
		УстановитьПредставителяПоОрганизации();
		_ПрПодп = ?(ЭтоЮрЛицо, 3, 1);
		_НаимДокПодп = "";
		_ПризОтпрУП = 1;
	КонецЕсли;
	Элементы.ГруппаЮЛ.Видимость = (_ОтпрЮЛ = 0);
	Элементы.ГруппаФЛ.Видимость = (_ОтпрЮЛ = 1);
