		Если ВидОтчета = "ОборотноСальдоваяВедомость" Тогда
			
			ШаблонИмениФайла = "OSV_%2_%3";
			
		ИначеЕсли ВидОтчета = "АнализСчета" Тогда
			
			ШаблонИмениФайла = "ANS_%1_%2_%3";
			
		ИначеЕсли ВидОтчета = "КарточкаСчета" Тогда
			
			ШаблонИмениФайла = "TRN_%1_%2_%3";
		Иначе
			ВызватьИсключение СтрШаблон(НСтр("ru = 'Невозможно получить шаблон имени файла для контейнера: %1 - неизвестный тип вид отчета.'"), ВидОтчета);
		КонецЕсли;
		
	Иначе
		ВызватьИсключение СтрШаблон(НСтр("ru = 'Невозможно получить шаблон имени файла для контейнера: %1 - неизвестный тип документа обмена.'"), 
			ТипДокумента);
	КонецЕсли;

	Возврат ШаблонИмениФайла;
	
