// Возвращает наименование раздела учёта, для которого открыта панель подсказок
//
// Параметры:
//   Форма - ФормаКлиентскогоПриложения - открытая форма раздела
//
// Возвращаемое значение:
//   Строка
//
Функция НаименованиеОткрытогоРаздела(Форма) Экспорт
	
	Результат = "";
	
	ИмяФормы = Форма.ИмяФормы;
	
	ЧастиИмениФормы = СтрРазделить(ИмяФормы, ".", Ложь);
	Если ЧастиИмениФормы.Количество() > 1 Тогда
		Результат = ЧастиИмениФормы[1];
	КонецЕсли;
	
	ВидОперации = Неопределено;
	ЭтоФормаДокумента  = СтрНачинаетсяС(ИмяФормы, "Документ.");
	Если ЭтоФормаДокумента Тогда
		Форма.Объект.Свойство("ВидОперации", ВидОперации);
	КонецЕсли;
	
	Если ВидОперации = Неопределено Тогда
		Возврат Результат;
	ИначеЕсли ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийПоступлениеТоваровУслуг.ПокупкаКомиссия")
		Или ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийПоступлениеТоваровУслуг.Оборудование") Тогда
		Возврат Результат + "ПокупкаКомиссия";
	ИначеЕсли ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийПоступлениеТоваровУслуг.Товары") Тогда
		Возврат Результат + "Товары";
	ИначеЕсли ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийПоступлениеТоваровУслуг.Услуги") Тогда
		Возврат Результат + "Услуги";
	ИначеЕсли ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийРеализацияТоваров.ПродажаКомиссия")
		Или ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийРеализацияТоваров.Оборудование") Тогда
		Возврат Результат + "ПродажаКомиссия";
	ИначеЕсли ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийРеализацияТоваров.Товары") Тогда
		Возврат Результат + "Товары";
	ИначеЕсли ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийРеализацияТоваров.Услуги") Тогда
		Возврат Результат + "Услуги";
	ИначеЕсли ВидОперации = ПредопределенноеЗначение("Перечисление.ВидыОперацийСчетаПокупателю.ТоварыИУслуги") Тогда
		Возврат Результат;
	Иначе
		Возврат ""; // для вида операции подсказки не предусмотрены
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

// Добавляет событие бизнес-статистики в журнал регистрации
//
// Параметры:
//   ИмяОперации - Строка - Имя операции для отслеживания статистики
//
Процедура ЗаписатьОперациюБизнесСтатистики(ИмяОперации) Экспорт
	
	ИмяКлючевойОперации = СтрШаблон("СтатистикаБП.ПанельПодсказок.%1", ИмяОперации);
	СтатистикаПоПоказателямКлиентСервер.ДобавитьСобытие(ИмяКлючевойОперации);
	
КонецПроцедуры

