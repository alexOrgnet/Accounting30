#Область ПараметрыВыбора

// Устанавливает параметры выбора номенклатуры.
//
// Параметры:
//  Форма - ФормаКлиентскогоПриложения - форма, в которой нужно установить параметры выбора
//  ВидПродукции - ПеречислениеСсылка.ВидыПродукцииИС, Массив Из ПеречислениеСсылка.ВидыПродукцииИС - Вид продукции.
//  ИмяПоляВвода - Строка - имя поля ввода номенклатуры.
Процедура УстановитьПараметрыВыбораНоменклатуры(Форма, ВидыПродукции = Неопределено, ИмяПоляВвода = "ТоварыНоменклатура") Экспорт
	
	ПараметрыВыбора = Новый Массив;
	
	Для Каждого ПараметрВыбора Из Форма.Элементы[ИмяПоляВвода].ПараметрыВыбора Цикл
		Если ПараметрВыбора.Имя <> "Отбор.Табак"
			И ПараметрВыбора.Имя <> "Отбор.Обувь"
			И ПараметрВыбора.Имя <> "Отбор.Велосипеды"
			И ПараметрВыбора.Имя <> "Отбор.Антисептики"
			И ПараметрВыбора.Имя <> "Отбор.БАДы"
			И ПараметрВыбора.Имя <> "Отбор.НикотиносодержащаяПродукция"
			И ПараметрВыбора.Имя <> "Отбор.Пиво"
			И ПараметрВыбора.Имя <> "Отбор.Духи"
			И ПараметрВыбора.Имя <> "Отбор.КреслаКоляски"
			И ПараметрВыбора.Имя <> "Отбор.ЛегкаяПромышленность"
			И ПараметрВыбора.Имя <> "Отбор.МолочнаяПродукцияПодконтрольнаяВЕТИС"
			И ПараметрВыбора.Имя <> "Отбор.МолочнаяПродукцияБезВЕТИС"
			И ПараметрВыбора.Имя <> "Отбор.Фотоаппараты"
			И ПараметрВыбора.Имя <> "Отбор.АлкогольнаяПродукцияВоВскрытойТаре"
			И ПараметрВыбора.Имя <> "Отбор.АлкогольнаяПродукцияВоВскрытойТаре"
			И ПараметрВыбора.Имя <> "Отбор.Шины"
			И ПараметрВыбора.Имя <> "Отбор.АльтернативныйТабак"
			И ПараметрВыбора.Имя <> "Отбор.УпакованнаяВода"
			И ПараметрВыбора.Имя <> "Отбор.ПродукцияМаркируемаяДляГИСМ"
			И ПараметрВыбора.Имя <> "Отбор.БезалкогольноеПиво"
			И ПараметрВыбора.Имя <> "Отбор.СоковаяПродукция"
			И ПараметрВыбора.Имя <> "Отбор.Зерно"
			И ПараметрВыбора.Имя <> "Отбор.ПродуктыПереработкиЗерна"
			И ПараметрВыбора.Имя <> "Отбор.ЗерноВЕТИС"
			И ПараметрВыбора.Имя <> "Отбор.ПродуктыПереработкиЗернаВЕТИС"
            И ПараметрВыбора.Имя <> "Отбор.МорепродуктыПодконтрольныеВЕТИС"
			И ПараметрВыбора.Имя <> "Отбор.ПодконтрольнаяПродукцияСАТУРН" Тогда
			ПараметрыВыбора.Добавить(ПараметрВыбора);
		КонецЕсли;
	КонецЦикла;
	ИмяРеквизитаНоменклатуры = ИнтеграцияИСМПБПВызовСервера.ИмяРеквизитаНоменклатурыПоВидуПродукцииИС(ВидыПродукции);
	Если ЗначениеЗаполнено(ИмяРеквизитаНоменклатуры) Тогда
		ПараметрыВыбора.Добавить(Новый ПараметрВыбора("Отбор."+ИмяРеквизитаНоменклатуры, Истина));
	КонецЕсли;
		
	ПараметрыВыбора.Добавить(Новый ПараметрВыбора("Отбор.Услуга", Ложь));
	
	Форма.Элементы[ИмяПоляВвода].ПараметрыВыбора = Новый ФиксированныйМассив(ПараметрыВыбора);
	
КонецПроцедуры

#КонецОбласти

