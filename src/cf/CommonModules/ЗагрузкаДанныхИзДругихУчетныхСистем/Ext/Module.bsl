// Возвращает информацию о поддерживаемых системах, для которых реализован переход в 1С:Бухгалтерию
//
// Возвращаемое значение:
//  ТаблицаЗначений - см. НовыйДанныеУчетныхСистем
//
Функция ПоддерживаемыеСистемы() Экспорт
	
	УчетныеСистемы = НовыйДанныеУчетныхСистем();
	СтрокаКБ = УчетныеСистемы.Добавить();
	СтрокаКБ.Имя = "КБ";
	СтрокаКБ.Представление = НСтр("ru = 'Контур.Бухгалтерия'");
	СтрокаКБ.АдресИнструкции = "https://its.1c.ru/bmk/bp30/data_import_konturbuh";
	СтрокаКЭ = УчетныеСистемы.Добавить();
	СтрокаКЭ.Имя = "КЭ";
	СтрокаКЭ.Представление = НСтр("ru = 'Контур.Эльба'");
	СтрокаКЭ.АдресИнструкции = "https://its.1c.ru/bmk/bp30/data_import_konturelba";
	СтрокаМД = УчетныеСистемы.Добавить();
	СтрокаМД.Имя = "МД";
	СтрокаМД.Представление = НСтр("ru = 'Моё дело'");
	СтрокаМД.АдресИнструкции = "https://its.1c.ru/bmk/bp30/data_import_moedelo";
	СтрокаНетВСписке = УчетныеСистемы.Добавить();
	СтрокаНетВСписке.Имя = "НетВСписке";
	СтрокаНетВСписке.Представление = НСтр("ru = 'Моего варианта нет в списке'");
	СтрокаНетВСписке.ПоддержкаОтсутствует = Истина;
	
	Возврат УчетныеСистемы;
	
КонецФункции

#КонецОбласти

#Область СлужебныеПроцедурыИФункции

Функция НовыйДанныеУчетныхСистем()
	
	Результат = Новый ТаблицаЗначений;
	Результат.Колонки.Добавить("Имя");
	Результат.Колонки.Добавить("Представление");
	// Ссылка на страницу с инструкцией по выгрузке данных из поддерживаемой системы
	Результат.Колонки.Добавить("АдресИнструкции");
	// Признак того, что пользователю требуется система, переход из которой не поддерживается
	Результат.Колонки.Добавить("ПоддержкаОтсутствует");
	
	Возврат Результат;
	
КонецФункции

#КонецОбласти