Функция ПолучитьКлассификатор(ИмяМакета) Экспорт
	
	Если ИмяМакета = "ОКВЭД2" Тогда
		Классификатор = РегистрыСведений.КлассификаторОКВЭД2.ФиксированноеСоответствиеКодНаименование();
	ИначеЕсли ИмяМакета = "ОКОПФ" Тогда
		Классификатор = РегистрыСведений.КлассификаторОКОПФ.ФиксированноеСоответствиеКодНаименование();
	ИначеЕсли ИмяМакета = "ОКФС" Тогда
		Классификатор = РегистрыСведений.КлассификаторОКФС.ФиксированноеСоответствиеКодНаименование();
	Иначе
		КлассификаторСоответствие = Новый Соответствие();
		
		Макет = Справочники.Организации.ПолучитьМакет(ИмяМакета);
		
		ТекущаяОбласть = Макет.Область("Классификатор");

		Если ТекущаяОбласть <> Неопределено Тогда	
		
			Для НомерСтр = ТекущаяОбласть.Верх По ТекущаяОбласть.Низ Цикл
				
				// Перебор строк макета.
				КодПоказателя = СокрП(Макет.Область(НомерСтр, 1).Текст);
				Название      = СокрП(Макет.Область(НомерСтр, 2).Текст);
				
				Если КодПоказателя = "###" Тогда
					Прервать;
				ИначеЕсли ПустаяСтрока(КодПоказателя) Тогда
					Продолжить;
				Иначе
					КлассификаторСоответствие.Вставить(КодПоказателя, Название);
				КонецЕсли;

			КонецЦикла;
			
		КонецЕсли;
		
		Классификатор = Новый ФиксированноеСоответствие(КлассификаторСоответствие);
	КонецЕсли;
	
	Возврат Классификатор;

